<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313131"
    tools:context="com.example.chengmx.group16chessgame.activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/ruleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/chessgame"
            android:id="@+id/imageView" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button

            android:layout_width="190dp"
            android:layout_height="45dp"
            android:id="@+id/playAIButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/single"
            />

        <Button

            android:layout_width="190dp"
            android:layout_height="45dp"
            android:id="@+id/playButton"
            android:layout_below="@+id/playAIButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/multi"/>

        <Button

            android:layout_width="120dp"
            android:layout_height="45dp"
            android:id="@+id/settingButton"
            android:layout_below="@+id/playButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/setting2"/>

        <Button
            android:id="@+id/ruleButton"

            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_below="@+id/settingButton"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/about"/>

    </RelativeLayout>


</LinearLayout>
